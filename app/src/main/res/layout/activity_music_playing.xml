<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MusicPlaying"
    android:background="@drawable/main_bg"
    android:orientation="vertical"
    android:id="@+id/mContainer"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_top_button"
        android:background="@drawable/gradient_bg"
        android:layout_alignParentTop="true"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/back_button"
            android:layout_alignParentStart="true"
            android:src="@drawable/back_arrow"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/back_button"
            android:text="Now playing"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:textColor="@color/colorAccent"
            android:background="@android:color/transparent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toStartOf="@+id/menu_button"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/menu_button"
            android:layout_alignParentEnd="true"
            android:src="@drawable/notes"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/layout_top_button"
        android:id="@+id/card"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/music2"
            android:scaleType="centerCrop"
            android:id="@+id/cover_art"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/image_gradient"
            />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/song_name"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/colorAccent"
        android:text="This is song name"
        android:layout_below="@+id/card"
        android:gravity="center_horizontal"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:ellipsize="end"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/song_artist"
        android:textStyle="normal"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:text="This is song artist"
        android:layout_below="@+id/song_name"
        android:gravity="center_horizontal"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:ellipsize="end"
        />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_alignParentBottom="true"
    android:background="@drawable/gradient_bg"
    android:id="@+id/relative_layout_for_button"
    android:layout_alignParentEnd="true"
    android:layout_alignParentStart="true"
    >
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/music_shuffle"
        android:layout_centerVertical="true"
        android:id="@+id/music_shuffle"
        android:layout_marginStart="32dp"
        android:layout_alignParentStart="true"
        />
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/music_play_previous"
        android:layout_centerVertical="true"
        android:id="@+id/music_previous"
        android:layout_marginStart="32dp"
        android:layout_toStartOf="@+id/play_pause"
        android:layout_marginEnd="16dp"
        />
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/music_play_next"
        android:id="@+id/music_next"
        android:layout_marginStart="32dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/play_pause"
        />
    <ImageView
    android:layout_width="35dp"
    android:layout_height="35dp"
    android:src="@drawable/music_repeat"
    android:layout_centerVertical="true"
    android:id="@+id/music_repeat"
    android:layout_marginStart="32dp"
    android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
    />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/play_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/music_play"
        tools:ignore="SpeakableTextPresentCheck" />


</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative_layout_for_seekbar"
        android:layout_above="@+id/relative_layout_for_button"
        android:layout_marginBottom="50dp"
        android:background="@drawable/gradient_bg"
        >
        <SeekBar
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:id="@+id/seekbar"
             />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/total_time"
            android:text="0:00"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:layout_toStartOf="@+id/seekbar"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time_remaining"
            android:text="0:00"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:layout_toEndOf="@+id/seekbar"
            android:textStyle="bold"
            />

    </RelativeLayout>


</RelativeLayout>